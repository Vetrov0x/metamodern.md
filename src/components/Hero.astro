// Hero â€” YAML frontmatter header with blinking cursor
---

<section class="pt-12 pb-8 md:pt-20 md:pb-12" aria-label="Header">
  <!-- Opening frontmatter delimiter -->
  <div class="text-sm" style="color: var(--syn-delimiter)">---</div>

  <!-- YAML metadata -->
  <div class="frontmatter space-y-1 text-sm">
    <div class="kv"><span class="kv-key">title</span><span class="kv-string">metamodern.md</span></div>
    <div class="kv"><span class="kv-key">version</span><span class="kv-value">2026.1</span></div>
    <div class="kv"><span class="kv-key">type</span><span class="kv-value">manifest</span></div>
    <div class="kv"><span class="kv-key">encoding</span><span class="kv-value">human + machine</span></div>
    <div class="kv"><span class="kv-key">authors</span><span class="kv-value">[Ivan Vetrov, Aletheia]</span></div>
  </div>

  <!-- Closing frontmatter delimiter -->
  <div class="text-sm" style="color: var(--syn-delimiter)">---</div>

  <!-- Main title -->
  <h1 class="text-3xl font-bold mt-8 mb-4 md-h1">
    metamodern.md<span class="cursor">|</span>
  </h1>

  <!-- Tagline as blockquote -->
  <p class="md-quote text-lg">
    A config file for worldview, readable by humans and machines.
  </p>
</section>
