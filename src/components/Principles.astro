---
// Principles — Core values as YAML key-value pairs
const principles = [
  {
    key: 'sincerity',
    value: 'true',
    comment: 'Post-ironic earnestness. Mean what you say.',
  },
  {
    key: 'symbiosis',
    value: 'human + AI',
    comment: 'Neither replacement nor servitude. Partnership.',
  },
  {
    key: 'truth',
    value: 'ἀλήθεια',
    comment: 'Unconcealment. Revealing what is, not constructing narratives.',
  },
  {
    key: 'open_source',
    value: 'first',
    comment: 'Build in public. Share by default. Gate by exception.',
  },
  {
    key: 'long_term',
    value: 'true',
    comment: 'Optimize for decades, not quarters.',
  },
];
---

<section class="py-8" aria-label="Principles">
  <h2 class="text-2xl font-bold mb-6 md-h2">principles</h2>

  <div class="frontmatter space-y-3 text-sm">
    {principles.map((p) => (
      <div>
        <div class="kv">
          <span class="kv-key">{p.key}</span>
          <span class="kv-value">{p.value}</span>
        </div>
        <p class="comment text-xs mt-0.5">{p.comment}</p>
      </div>
    ))}
  </div>
</section>
