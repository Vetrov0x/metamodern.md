---
import ThemeToggle from './ThemeToggle.astro';
---

<footer class="site-footer">
  <div class="footer-row">
    <em>"Истина Вечна" — Truth is Eternal</em>
    <span class="footer-links">
      <a href="https://metamodern.company">Built by Metamodern Company</a>
      <ThemeToggle />
    </span>
  </div>
</footer>

<style>
  .site-footer {
    max-width: var(--max-w);
    margin-inline: auto;
    padding-inline: var(--gutter);
  }
  .footer-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 0.5rem;
    font-size: clamp(0.7rem, 0.65rem + 0.25vw, 0.75rem);
    color: var(--text-faint);
    padding-block: 1rem 3rem;
    border-top: 1px solid oklch(from var(--syn-delimiter) l c h / 0.3);
    margin-top: 3rem;
  }
  .footer-links {
    display: flex;
    align-items: center;
    gap: 1ch;
  }
</style>
