// Contact â€” Emails + links + machine-readable reference
const links = [
  { key: 'email', value: 'ivan@metamodern.md', href: 'mailto:ivan@metamodern.md' },
  { key: 'studio', value: 'metamodern.company', href: 'https://metamodern.company' },
  { key: 'telegram', value: '@metamodern_channel', href: 'https://t.me/metamodern_channel' },
  { key: 'github', value: 'Vetrov0x', href: 'https://github.com/Vetrov0x' },
];
---

<section class="py-8" aria-label="Contact">
  <h2 class="text-2xl font-bold mb-6 md-h2">links</h2>

  <div class="frontmatter space-y-2 text-sm">
    {links.map((l) => (
      <div class="kv">
        <span class="kv-key">{l.key}</span>
        <a href={l.href} target={l.href.startsWith('mailto:') ? undefined : '_blank'} rel={l.href.startsWith('mailto:') ? undefined : 'noopener noreferrer'} class="kv-value" style="text-decoration: underline; text-underline-offset: 0.2em;">
          {l.value}
        </a>
      </div>
    ))}
  </div>

  <p class="comment text-xs mt-6">
    Machine-readable version: <a href="/.well-known/agent-manifest.yaml" style="color: var(--syn-comment); text-decoration: underline;">/.well-known/agent-manifest.yaml</a>
  </p>
</section>
