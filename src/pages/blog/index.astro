---
import Base from '../../layouts/Base.astro';
import BlogCard from '../../components/BlogCard.astro';
import { getBlogPostsByLang, sortByDate } from '../../utils/blog';

const posts = sortByDate(await getBlogPostsByLang('en'));
---

<Base frontmatter={{ title: 'Blog â€” metamodern.md', description: 'Thoughts on AI, truth, and human-machine symbiosis.' }}>
  <h1>Blog<span class="cursor">|</span></h1>
  <p class="comment">Dispatches from the search for truth.</p>
  <hr />
  {posts.map(post => (
    <BlogCard
      title={post.data.title}
      description={post.data.description}
      pubDate={post.data.pubDate}
      slug={post.data.slug}
      lang="en"
      tags={post.data.tags}
    />
  ))}
</Base>
